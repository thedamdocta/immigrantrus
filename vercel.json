{
  "_comment": "Updated to fix staff portal routing - 2025-01-08",
  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  "outputDirectory": "dist",
  "functions": {
    "api/immigrantrus-crm.js": {
      "maxDuration": 30
    },
    "api/auth.js": {
      "maxDuration": 30
    },
    "api/sso-auth.js": {
      "maxDuration": 30
    },
    "api/google-oauth.js": {
      "maxDuration": 30
    },
    "api/clerk-webhook.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/immigrantrus-crm/(.*)",
      "destination": "/api/immigrantrus-crm?path=$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/staff-portal",
      "destination": "/staff-portal/index.html"
    },
    {
      "source": "/((?!staff-portal|api).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/staff-portal/assets/(.*).js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    },
    {
      "source": "/staff-portal/assets/(.*).css",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
